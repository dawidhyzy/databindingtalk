<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gof.com.databindingtalk.talkdetail.TalkDetailActivity">

    <ImageView
        android:id="@+id/talk_detail_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>

    <TextView
        android:id="@+id/talk_detail_title"
        style="@style/talk_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        tools:text="Talk title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rating"/>

        <TextView
            android:id="@+id/talk_detail_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="4.3 stars"/>

    </LinearLayout>
</LinearLayout>
